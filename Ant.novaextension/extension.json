{
	"identifier": "com.abattoirsoftware.Ant",
	"name": "Ant",
	"organization": "Abattoir Software",
	"description": "Lorem ipsum, dolor sit amet.",
	"version": "1.0",
	"categories": ["sidebars"],

	"main": "main.js",

	"activationEvents": [
		"onWorkspaceContains:build.xml"
	],

	"entitlements": {
		"filesystem": "readwrite",
		"process": true,
		"requests": true
	},

	"comments": [
		"@TODO....",
		"Preferences",
		"Location of java",
		"Location of custom ant",
		"Location of properites (should look in XML)"
	],

	"sidebars": [
		{
			"id": "antsidebar",
			"name": "Ant",
			"smallImage": "ant-small",
			"smallSelectedImage": "mysidebar-small-selected",
			"largeImage": "ant-large",
			"largeSelectedImage": "mysidebar-large-selected",
			"sections": [
				{
					"id": "antsidebar",
					"name": "ANT Build Targets",
					"allowMultiple": false,
					"placeholderText": "No Ant 'build.xml' was found in the root of your workspace.",
					"placeholderImage": "placeholder",
					"headerCommands": [
						{
							"title": "Run",
							"image": "__builtin.next",
							"tooltip": "Run a single, selected Ant target. If multiple are selected, this won't work. (Need to figure out how to make this only work for single items)",
							"command": "antsidebar.run",
							"when": "viewItem.length != 1"
						},
						{
							"title": "Show in Build XML",
							"image": "__builtin.path",
							"tooltip": "Jump to line in the Ant Build.XML file ",
							"command": "antsidebar.view",
							"comment": " WHEN, but should only be if properties file exists"
						}
					],
					"contextCommands": [
						{
							"title": "Run",
							"command": "antsidebar.run",
							"when": "viewItem != null"
						},
						{
							"title": "Show in Build XML",
							"command": "antsidebar.view",
							"when": "viewItem != null"
						}
					]
				}
			]
		}
	]
}
