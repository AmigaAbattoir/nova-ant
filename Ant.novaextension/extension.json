{
	"identifier": "com.abattoirsoftware.Ant",
	"name": "Ant",
	"organization": "Abattoir Software",
	"description": "Lorem ipsum, dolor sit amet.",
	"version": "1.0",
	"categories": ["sidebars"],

	"main": "main.js",

	"activationEvents": [
		"onLanguage:javascript"
	],

	"entitlements": {
		"filesystem": "readwrite",
		"process": true,
		"requests": true
	},

	"comments": [
		"Should activate on a build.xml in workspace.",
		"If multiple, then the tree should show each one",
		"-------",
		"Preferences",
		"Use built-in ant",
		"Location of ant",
		"Location of java",
	],

	"sidebars": [
		{
			"id": "antsidebar",
			"name": "Ant",
			"smallImage": "ant-small",
			"smallSelectedImage": "mysidebar-small-selected",
			"largeImage": "ant-large",
			"largeSelectedImage": "mysidebar-large-selected",
			"sections": [
				{
					"id": "antsidebar",
					"name": "ANT Build Targets",
					"allowMultiple": true,
					"placeholderText": "No Ant 'build.xml' was found in the root of your workspace.",
					"placeholderImage": "placeholder",
					"headerCommands": [
						{
							"title": "Run",
							"image": "__builtin.run",
							"tooltip": "Run Ant target",
							"command": "antsidebar.run",
							"when": "viewItem != null"
						}
					],
					"contextCommands": [
						{
							"title": "Run",
							"command": "antsidebar.run",
							"when": "viewItem != null"
						}
					]
				}
			]
		}
	]
}
